<Window x:Class="YiYao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YiYao"
        mc:Ignorable="d"
 
        Title="MainWindow" WindowState="Maximized" ResizeMode="NoResize" WindowStyle="None" Background="{x:Null}"
        >
    
    <Viewbox Stretch="Fill">
        <Canvas Width="1920" Height="1080" VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <local:NavigationManager  Width="1920" Height="1080" x:Name="root">
                <TextBlock x:Name="debug" FontSize="18" Foreground="Red" Canvas.Left="100" Canvas.Top="100"  />
                
            </local:NavigationManager>

            <TextBox Background="BurlyWood" x:Name="messageText" Foreground="White" Width="1920" FontSize="20" Height="100"
                       TextAlignment="Center" Padding="0,40,0,0" IsHitTestVisible="False" Canvas.Left="0" 
                       VerticalAlignment="Center" 
                        Visibility="Collapsed">
            </TextBox>
        </Canvas>
    </Viewbox>
</Window>
