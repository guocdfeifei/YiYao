                        <Grid Background="Yellow" Width="450" Height="180" HorizontalAlignment="Left" VerticalAlignment="Center">
                         <Image x:Name="image" HorizontalAlignment="Left" Width="180" Height="180"  Margin="-22,100,0,-53.8" Source="/YiYao;component/药物背景-圆.png" RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                            <Image x:Name="medBG" HorizontalAlignment="Right" Stretch="Fill" Width="329.9"    Margin="0,15,10,48.6" Source="/YiYao;component/药物文字背景.png" />

                            <Image x:Name="med" HorizontalAlignment="Left" Width="65.8" Height="Auto" Source="1.png" Margin="32.7,137.773,0,-7.123" />
                            
                            <TextBlock HorizontalAlignment="Left" Foreground="White" Height="16.8" Margin="185,34.773,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Text="{Binding name}"><LineBreak/><Run/><Run Text="："/></TextBlock>
                            <Canvas x:Name="通用名" Margin="185,55,111,165.2">

                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="通用名：" VerticalAlignment="Top" Width="55"/>

                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="{Binding common_name}" VerticalAlignment="Top" Width="100" Canvas.Left="54"/>
                            </Canvas>
                            <Canvas x:Name="规格" Margin="185,74,119,144.2">

                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="规格：" VerticalAlignment="Top" Width="46"/>

                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="{Binding specification}" VerticalAlignment="Top" Width="100" Canvas.Left="46" Canvas.Top="2"/>
                            </Canvas>
                            <Canvas x:Name="用法用量" Margin="185,100,66,120.2">

                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="用法：" VerticalAlignment="Top" Width="45"/>

                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="{Binding day}" VerticalAlignment="Top" Width="18" Canvas.Left="50"/>
                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="天" VerticalAlignment="Top" Width="18" Canvas.Left="67"/>
                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="{Binding time}" VerticalAlignment="Top" Width="18" Canvas.Left="91"/>
                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="次" VerticalAlignment="Top" Width="18" Canvas.Left="108"/>
                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="每次：" VerticalAlignment="Top" Width="53" Canvas.Left="141"/>
                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="{Binding dosage}" VerticalAlignment="Top" Width="18" Canvas.Left="185"/>
                            </Canvas>
                            <Canvas x:Name="用药提醒" Margin="185,122,29,98.2">

                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="{Binding start}" VerticalAlignment="Top" Width="85" Canvas.Left="64"/>
                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="{Binding end}" VerticalAlignment="Top" Width="85" Canvas.Left="155"/>

                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="用药提醒：" VerticalAlignment="Top" Width="68"/>
                            </Canvas>
                            <Canvas x:Name="复购提醒" Margin="185,144,120,76.2">
                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" Text="{Binding date}" VerticalAlignment="Top" Width="85" Canvas.Left="64"/>
                                <TextBlock HorizontalAlignment="Left" Foreground="White" Height="17" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68"><Run Text="复购"/><Run Text=""/><Run Text="提醒："/></TextBlock>
                            </Canvas>

                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>

        </ScrollViewer>

        <TextBlock HorizontalAlignment="Left" Height="45.625" Margin="90.6,114.637,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="384" Foreground="#FF42918A" FontSize="36" Text="用药方案"/>
        <!-- 点阵地图-->
    </Grid>
</UserControl>
